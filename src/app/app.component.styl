ul{
  list-style:none;
  width:100%;
  display:flex;
  justify-content:space-between;
  li{
    width:48%;
    padding:0 10px;
    &:first-child{
      border-right:1px solid #ccc;
    }
    h2{
      font-size:16px;
    }
    p{
      font-size:12px
    }
  }
}

.toolbar {
    .title {
        color: red;
        &:hover {
            color: blue;
        }
    }
}

/* AppComponent's private CSS styles */
h1 {
  font-size: 1.2em;
  margin-bottom: 0;
}
nav a {
  padding: 5px 10px;
  text-decoration: none;
  margin-top: 10px;
  display: inline-block;
  background-color: #eee;
  border-radius: 4px;
}
nav a:visited, a:link {
  color: #334953;
}
nav a:hover {
  color: #039be5;
  background-color: #cfd8dc;
}
nav a.active {
  color: #039be5;
}
